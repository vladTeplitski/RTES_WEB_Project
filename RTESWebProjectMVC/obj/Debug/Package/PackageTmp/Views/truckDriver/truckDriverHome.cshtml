<div class="container-fluid" ng-controller="truckDriverController">

    <!--START truck driver Page-->


    <div class="row bodyRow operatorWindow">

        <!-- Start truck driver buttons -->
        <div ng-hide="btnPanel" class="col-lg-3 col-lg-offset-1 col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2 opButtonsCont1">
            <div class="getStartedBox" style="position: relative; margin-top: 8px; margin-bottom: 8px;">


                <input id="submitDriver1" ng-click="truckDriverClick(1)" type="button" value="Start app" onclick="driverAppSetRefreshes()" class="btnInfo">
                <div id="" ng-click="truckDriverClick(1)" onclick="driverAppSetRefreshes()" class="btnInfo">
                    <div style="display: inline; position: absolute; left: 8px;"><i Style="color:#FF3526"class="glyphicon glyphicon-off"></i></div>
                    Start App
                </div>

            </div>
        </div>
        <!-- END truck driver buttons -->


        <div class="col-lg-6 col-lg-offset-1 col-md-6 col-md-offset-1 col-xs-12">

            <div class="mainWindow">

                <!--Start truck driver home window-->
                <div ng-hide="truck0" class="textContainer">
                    Welcome to tow truck driver home.
                    Press "Start App" to start the work.

                </div>
                <!--END truck driver home window-->

            <!-- Truck driver tasks list -->
        
                <div id="tasksContain">
                    <div ng-hide="truck1" class="textContainer">

                        @Html.Partial("tasksGuiPartial")

                    </div>
                </div>

          




            </div><!--Main window div-->
        </div><!--bootstrap col content div-->
    </div> <!--End truck driver Page-->
</div><!--Main container-->
