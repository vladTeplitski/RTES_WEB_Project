<div class="container-fluid" ng-controller="truckDriverController">

    <!--START truck driver Page-->


    <div class="row bodyRow operatorWindow">

        <!-- Start truck driver buttons -->
        <div ng-hide="btnPanel" class="col-lg-3 col-lg-offset-1 col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="getStartedBox" style="position: relative; margin-top: 8px; margin-bottom: 8px;">

                <div id="startDriverApp" ng-click="truckDriverClick(1)" onclick="driverAppSetRefreshes();turnongps();" class="btnInfo" >
                    <div style="display: inline; position: absolute; left: 8px;"><i Style="color:#FF3526"class="glyphicon glyphicon-off"></i></div>
                    Start App
                </div>
            </div>
        </div>
        <!-- END truck driver buttons -->


        <div class="col-lg-6 col-lg-offset-1 col-md-6 col-md-offset-1 col-xs-12">

            <div class="mainWindow">

                <!--Start truck driver home window-->
                <div id="contDriverApp" ng-hide="truck0" class="textContainer">
                    Welcome to tow truck driver home.
                    Press "Start App" to start the work.

                </div>
                <!--END truck driver home window-->

            <!-- Truck driver tasks list -->
        
                <div id="tasksContain">
                    <div ng-hide="truck1">

                        @Html.Partial("tasksGuiPartial")

                    </div>
                </div>

                <div id="resultGui"></div>

                <!-- Truck driver notifications-->
                <div id="closeTruckNotif" class="successNotif1" style="display:@ViewBag.showCloseTruckNotif">
                    <div class="successNotifHeader">
                        <b><i Style="font-size:15px;margin-right:5px;" class="glyphicon glyphicon-ok"></i>Notfication</b>
                        <div onclick="closereportNotif()" class="x">x</div>
                    </div>
                    <br />
                    <b>Close report successfully.</b>

                </div>
                <!-- End truck driver notifications-->




            </div><!--Main window div-->
        </div><!--bootstrap col content div-->
    </div> <!--End truck driver Page-->
</div><!--Main container-->

<script type="text/javascript">
    function closereportNotif() {
        $('#closeTruckNotif').hide();

    }
</script>
