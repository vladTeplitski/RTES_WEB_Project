<!--Start User Details window-->
<div id="mainUserDetailsContainer">
    <div id="userDetailsContainer" class="infoTableClass opRepLabelJs" style="display:@ViewBag.showUserDetailsWindow">
        <div class="reportLabelHead">
            <b><i Style="font-size:15px;margin-right:5px;" class="glyphicon glyphicon-list-alt"></i>User Details</b>
            <div onclick="closeView2()" class="x">x</div>
        </div>

        <div class="tableContPartial">
            <table id="myTable" class="table table - striped tablePartial" style="font-size:small;">

                @{

                    if (ViewBag.userDetails != null)
                    {
                        foreach (var item in ViewBag.userDetails)
                        {

                            <tr id="updatePannelAngular" style="background-color:#5C91BF;">
                                <td>
                                    User ID:
                                </td>
                                <td>
                                    @item.id
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#6DA0CD;">
                                <td>
                                    Name:
                                </td>
                                <td>
                                    @item.name
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#5C91BF;">
                                <td>
                                    Family Name:
                                </td>
                                <td>
                                    @item.familyName
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#6DA0CD;">
                                <td>
                                    Email:
                                </td>
                                <td>
                                    @item.email
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#5C91BF;">
                                <td>
                                    Address:
                                </td>
                                <td>
                                    @item.address
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#6DA0CD;">
                                <td>
                                    Gender:
                                </td>
                                <td>
                                    @item.gender
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#5C91BF;">
                                <td>
                                    Password:
                                </td> <!--Show password only for client accounts. Dont show operators' passwords-->
                                @if (item.role == "Client")
                                {
                                    <td style="color:#5BDB18;font-size:small">
                                        @item.password
                                    </td>
                                }
                                else
                                {
                                    <td style="color:red;font-size:small">
                                        No Access (Operator)
                                    </td>
                                }

                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#6DA0CD;">
                                <td>
                                    Role:
                                </td>
                                <td>
                                    @item.role
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#5C91BF;">
                                <td>
                                    Company:
                                </td>
                                <td>
                                    @item.company
                                </td>
                            </tr>
                            <tr id="updatePannelAngular" style="background-color:#6DA0CD;">
                                <td>
                                    Phone:
                                </td>
                                <td>
                                    @item.userPhoneNumber
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr id="updatePannelAngular">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
<!--END User Details window-->

<!--Javascript-->
<script type="text/javascript">
    function closeView2() {
        $('#userDetailsContainer').hide();

    }
</script>
